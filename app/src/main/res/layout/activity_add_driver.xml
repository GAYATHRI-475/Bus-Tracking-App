<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="14dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD DRIVER"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2A2AAF"
                android:paddingStart="110dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#2A2AAF"
            android:layout_marginBottom="24dp" />

        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/box_bg"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                android:textColor="#000"
                android:textSize="16sp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Register Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/box_bg"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Number"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editRegNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Register Number"
                android:textColor="#000"
                android:textSize="16sp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Bus Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/box_bg"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Number"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editBusNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Bus Number"
                android:textColor="#000"
                android:textSize="16sp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/box_bg"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Email"
                android:textColor="#000"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Password Field -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/box_bg"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:background="@android:color/transparent"
                android:hint="Enter Password (min 6 chars)"
                android:textSize="16sp"
                android:inputType="textPassword" />
        </LinearLayout>

        <!-- Mobile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/box_bg"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Mobile Number"
                android:textColor="#000"
                android:textSize="16sp"
                android:inputType="phone"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Role -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/box_bg"
            android:layout_marginVertical="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Role"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Role"
                android:textColor="#000"
                android:textSize="16sp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Driver"
            android:textAllCaps="false"
            android:backgroundTint="#2A2AAF"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
