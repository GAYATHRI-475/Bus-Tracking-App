<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_active"
                android:contentDescription="Dashboard Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Buses"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2A2AAF"
                android:paddingStart="10dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2A2AAF"
            android:layout_marginBottom="40dp" />

        <EditText
            android:id="@+id/searchBus"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Search by bus number..."
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="14sp"
            android:background="@drawable/search_edittext_bg"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:layout_marginBottom="16dp"
            android:inputType="text"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#333333"
            android:textColorHint="#999999" />

        <!-- Container for Active Bus Cards -->
        <LinearLayout
            android:id="@+id/activeBusesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>
