<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Light gray background -->
    <solid android:color="#F7F7F7" />

    <!-- Border line -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD" />

    <!-- Rounded corners -->
    <corners android:radius="10dp" />

    <!-- Inner padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>