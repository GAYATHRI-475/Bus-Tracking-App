<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="14dp"
        android:paddingTop="14dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bus"
            android:contentDescription="Admin Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUS DETAILS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2A2AAF"
            android:paddingStart="10dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6577DD"
        android:layout_marginBottom="20dp" />


    <EditText
        android:id="@+id/searchBus"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Search by bus number or driver..."
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="14sp"
        android:background="@drawable/search_edittext_bg"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="10dp"
        android:layout_marginBottom="16dp"
        android:inputType="text"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#333333"
        android:textColorHint="#999999"/>

    <!-- Scrollable container for bus cards -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/busContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Dynamic bus cards will be added here -->
        </LinearLayout>

    </ScrollView>

</LinearLayout>